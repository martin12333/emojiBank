{
  "manifest_version": 2,

  "name": "Emoji Bank",
  "description": "This extension allows you to easily save, select and use emojis that use uncommon unicode characters",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "emoji.html",
    "default_title": "Emote!"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
